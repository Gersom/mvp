.o-config-dialog > ul > li,
.o-config-dialog > ul > a {
  padding-left: 1.5rem;
  padding-right: 1.5rem;
  cursor: pointer;
  line-height: 2rem;
  width: 100%;
  list-style: none;

  &:hover {
    background: $color-primary;
    color: #fff;
  }

  i{
    margin-right: 0.3rem;
  }

  i::before {
    vertical-align: middle;
  }
}

.o-config-dialog > ul > p {
  color: #999;
  border-bottom: 1px solid rgba(#999, 0.4);
  margin: 0 0 0.5rem 0;
  padding-top: 0.8rem;
  padding-bottom: 0.6rem;
  text-align: center;
}
