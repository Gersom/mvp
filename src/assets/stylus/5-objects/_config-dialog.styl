.o-config-dialog {
  cursor: pointer;
  height: 100%;
  position: relative;

  &:hover {
    & > ul {
      display: block;
    }
  }
}

.o-config-dialog > ul {
  background: white;
  box-shadow: 2px 2px 20px rgba(147, 147, 147, 0.81);
  color: darken(#fff, 30%);
  display: block;
  display: none;
  font-size: 0.8rem;
  left: 50%;
  min-width: 10rem;
  padding-bottom: 0.5rem;
  position: absolute;
  top: 70%;
  transform: translateX(-50%);
  z-index: 99;

  &::before {
    content: "";
    display: block;
    width: 0;
    height: 0;
    border-left: 0.5rem solid transparent;
    border-right: 0.5rem solid transparent;
    border-bottom: 0.8rem solid #fff;
    position: absolute;
    bottom: 100%;
    right: 21%;
  }
}

.o-config-dialog > ul > li:nth-child(1),
.o-config-dialog > ul > a:nth-child(1) {
  margin-top: 0.5rem;
}

.o-config-dialog > ul > .active:not(p) {
  position: relative;
